=form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2="#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        -@task.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label :name
    =f.text_field :name
  .field
    =f.hidden_field :task_list_id, value: (params[:task_list] || @task.task_list_id)
  -if params[:action] != 'new'
    .field
      =f.label :completed
      =f.check_box :completed
  .actions
    =f.submit 'Save'
